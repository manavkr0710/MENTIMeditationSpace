                                    <ImageView fitHeight="25.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                                        <image>
                                            <Image url="@images/add-contact.png" />
                                        </image>
                                    </ImageView>
                                </graphic>
                                <font>
                                    <Font name="System Bold Italic" size="13.0" />
