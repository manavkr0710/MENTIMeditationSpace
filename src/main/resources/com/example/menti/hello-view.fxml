                                <yAxis>
                                    <NumberAxis fx:id="y" />
                                </yAxis>
                            </LineChart>
                        </children>
                    </AnchorPane>
                    <Label layoutX="15.0" layoutY="85.0" text="Today,">
                        <font>
                            <Font name="System Bold Italic" size="13.0" />
                        </font>
